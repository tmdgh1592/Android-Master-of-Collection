<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/tabBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/tabBackground</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">@android:color/white</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/black</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@android:color/white</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <style name="DialogBlackBackground" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#000000</item>
    </style>

    <style name="DialogMainColorBackground" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/tabIconPressedColor</item>
        <item name="android:fontFamily">@font/shop_item_font_b</item>
        <item name="colorAccent">@color/tabIconPressedColor</item>
    </style>

    <style name="collectionTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="settingActivityStyle" parent="AppTheme">
        <item name="android:background">@color/tabBackground</item>
        <item name="selectableItemBackgroundBorderless">@color/tabBackground</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorAccent">@color/tabIconPressedColor</item>
        <item name="colorPrimaryDark">@color/tabBackground</item>
        <item name="android:textColorSecondary">@color/tabIconPressedColor</item>
        <item name="android:textColorAlertDialogListItem">@color/tabIconPressedColor</item>
    </style>

    <style name="rankingStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/shop_item_font_b</item>
        <item name="android:titleTextColor">@color/other_ranking_text_color</item>
    </style>

</resources>
