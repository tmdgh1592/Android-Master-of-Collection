<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="365dp"
        android:background="@color/black">


        <ImageView
            android:id="@+id/box_result_border_image_view"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:layout_marginTop="48dp"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@null"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/box_result_image_view"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@null"
            android:adjustViewBounds="true"/>


        <TextView
            android:id="@+id/result_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_below="@+id/box_result_image_view"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:fontFamily="@font/shop_item_font"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/result_frag_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textSize="14sp"
            android:layout_below="@+id/result_name_text_view"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:fontFamily="@font/shop_item_font"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:id="@+id/box_result_get_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:clickable="true"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_layout">

            <TextView
                android:id="@+id/get_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shop_item_font_b"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/item_price_color"
                android:text="@string/box_get_result_text"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>