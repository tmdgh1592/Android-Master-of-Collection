<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_alignParentBottom="true"
    android:weightSum="3.07"
    android:orientation="vertical"
    android:background="@color/tabBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:background="@color/tabLineColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/collection_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:gravity="center|bottom">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_collection_d"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/tab1_name"
                android:textColor="@color/tabTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:gravity="center|bottom">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_shop_d"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/tab3_name"
                android:textColor="@color/tabTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/factory_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:gravity="center|bottom">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_factory_d"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/tab2_name"
                android:textColor="@color/tabTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>